<form action="/auth/signup" method="POST" id="sign-up" >
  <label for="new-email">Email</label>
  <input id="new-email" type="text" name="email">

  <label for="new-name">Name</label>
  <input id="new-name" type="text" name="name" >

  <label for="new-password">Password</label>
  <input id="new-password" type="password" name="password" placeholder="(At least 8 characters)">
  <p></p>

  <input type="submit" value="Sign up">
</form>
